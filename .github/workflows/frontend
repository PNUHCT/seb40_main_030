name: frontend

on:
  pull_request:
    branches:
      - main
    paths:
      - "frontend/**"

defaults:
  run:
    working-directory: ./frontend

jobs:
  runs-on: deploy-runner
    steps:
      - name: Checkout Source Code
        uses: actions/checkout@v2

      - name: Install Dependencies
        run: npm install

      - name: Build
        run: npm run build
